PORT=5000
DB_HOST=localhost
DB_PORT=5432
DB_NAME=topup_db
DB_USER=postgres
DB_PASSWORD=your_password
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_EXPIRES_IN_REMEMBER=30d
UPLOAD_PATH=./uploads

# Comma-separated list of allowed frontend origins for CORS (no spaces)
# Example (server IP + local dev):
# ALLOWED_ORIGINS=http://154.19.187.78:3000,http://154.19.187.78:3001,http://localhost:3000,http://localhost:3001
ALLOWED_ORIGINS=http://154.19.187.78:3000,http://154.19.187.78:3001,http://localhost:3000,http://localhost:3001


APP_TIMEZONE=Asia/Colombo

# Telegram notifications (optional)
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Password reset + SMTP
# Frontend URL used to build reset links
FRONTEND_URL=http://localhost:3000
# Reset token expiry in minutes
RESET_TOKEN_EXPIRES_MINUTES=60
# SMTP configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM="Topup Support <no-reply@example.com>"




